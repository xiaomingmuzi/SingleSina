<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_fa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lixm.singlesina.customview.SlidingTabLayout
        android:id="@+id/id_main_indicator"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        tl:tl_indicator_color="@color/line_end"
        tl:tl_indicator_height="2dp"
        android:layout_centerHorizontal="true"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/color_33"
        tl:tl_textUnselectColor="@color/color_93"
        tl:tl_textsize="14sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/main_vp"
        android:layout_below="@id/id_main_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>
